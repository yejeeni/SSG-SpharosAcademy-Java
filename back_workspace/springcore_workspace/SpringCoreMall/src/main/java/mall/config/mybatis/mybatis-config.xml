<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
   <typeAliases>
      <typeAlias type="notice.domain.Notice" alias="Notice"/>
      <typeAlias type="mall.domain.TopCategory" alias="TopCategory"/>
      <typeAlias type="mall.domain.SubCategory" alias="SubCategory"/>
      <typeAlias type="mall.domain.Product" alias="Product"/>
      <typeAlias type="mall.domain.Color" alias="Color"/>
      <typeAlias type="mall.domain.Size" alias="Size"/>
      <typeAlias type="mall.domain.ProductColor" alias="ProductColor"/>
      <typeAlias type="mall.domain.ProductSize" alias="ProductSize"/>
      <typeAlias type="mall.domain.ProductImg" alias="ProductImg"/>
   </typeAliases>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="JNDI">
        <property name="data_source" value="java:comp/env/jndi/mysql"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
<mapper resource="mall/config/mybatis/NoticeMapper.xml"/> 
<mapper resource="mall/config/mybatis/TopCategoryMapper.xml"/> 
<mapper resource="mall/config/mybatis/SubCategoryMapper.xml"/> 
<mapper resource="mall/config/mybatis/ProductMapper.xml"/> 
<mapper resource="mall/config/mybatis/ColorMapper.xml"/> 
<mapper resource="mall/config/mybatis/SizeMapper.xml"/> 
<mapper resource="mall/config/mybatis/ProductColorMapper.xml"/> 
<mapper resource="mall/config/mybatis/ProductSizeMapper.xml"/> 
<mapper resource="mall/config/mybatis/ProductImgMapper.xml"/> 
  </mappers>
</configuration>