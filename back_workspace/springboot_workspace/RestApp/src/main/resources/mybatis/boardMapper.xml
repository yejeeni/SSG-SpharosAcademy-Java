<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssg.restapp.model.board.BoardMapper">
    <resultMap id="BoardResultMap" type="Board">
        <id property="boardId" column="board_id"/>
        <result property="title" column="title"/>
        <result property="writer" column="writer"/>
        <result property="content" column="content"/>
        <result property="regdate" column="regdate"/>
        <result property="hit" column="hit"/>
    </resultMap>

    <select id="selectAll" resultMap="BoardResultMap">
        SELECT * FROM board
    </select>

    <select id="selectById" parameterType="int" resultMap="BoardResultMap">
        SELECT * FROM board WHERE board_id = #{boardId}
    </select>

    <insert id="insert" parameterType="Board">
        INSERT INTO board(title, writer, content) VALUES(#{title}, #{writer}, #{content})
    </insert>

    <update id="update" parameterType="Board">
        UPDATE board SET title=#{title}, writer=#{writer}, content=#{content}
        WHERE board_id=#{boardId}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM board WHERE board_id=#{boardId}
    </delete>

</mapper>
